generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  uuid        String    @unique
  adventure   Adventure[]
}

model Adventure {
  id                        Int         @id @default(autoincrement())
  createdAt                 DateTime    @default(now())
  endedAt                   DateTime?
  difficulty                Int   // 1~3
  firstSelectedAnswerType   AnswerType?
  finalSelectedAnswerType   AnswerType?
  isFirstTransportation     Boolean?
  isFinalTransportation     Boolean?
  user                      User        @relation(fields: [userId], references: [id])
  userId                    Int
  mission                   Mission[]
}

model Mission {
  id            Int         @id @default(autoincrement())
  body          String
  quote         String
  imagePath     String?
  adventure     Adventure   @relation(fields: [adventureId], references: [id])
  adventureId   Int
}

model MissionTemplate {
  id                Int         @id @default(autoincrement())
  step              Int
  body              String
  quote             String
  imagePath         String?
  startNumber       Int?
  endNumber         Int?
  isTransportation  Boolean?
}

// enum
enum AnswerType {
	Hungry
  Thirsty
  WaterSide
  Theater
  Karaoke
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  uuid        String    @unique
  adventure   Adventure[]
}

model Adventure {
  id                        Int         @id @default(autoincrement())
  createdAt                 DateTime    @default(now())
  endedAt                   DateTime?
  difficulty                Int   // 1~3
  firstSelectedAnswerType   AnswerType?
  finalSelectedAnswerType   AnswerType?
  imagePath                 String?
  user                      User        @relation(fields: [userId], references: [id])
  userId                    Int
  mission                   Mission[]
}

model Mission {
  id            Int         @id @default(autoincrement())
  body          String
  adventure     Adventure   @relation(fields: [adventureId], references: [id])
  adventureId   Int
}

model MissionTemplate {
  id            Int         @id @default(autoincrement())
  step          Int
  body          String
  startNumber   Int
  endNumber     Int
}

// enum
enum AnswerType {
	Hungry
  Thirsty
  WaterSide
  Theater
  Karaoke
}
